{% form 'localization', id: "localization_form_tag", class: "dropup" %}
    <div class="localeBtn">{{ 'globe.png' | asset_img_url: '50px' | img_tag}}</div>
    <div class="dropup-content">
        {% for locale in shop.published_locales %}
            {% comment %}{{ locale.name }} ({{ locale.iso_code }}){% endcomment %}
            <a id="localeItem" lang="{{ locale.iso_code }}" href="#">{{ locale.endonym_name }}</a>
        {% endfor %}
    </div>

    <input type="hidden" id="localCode" name="locale_code" value="{{ form.current_locale.iso_code }}">
{% endform %}